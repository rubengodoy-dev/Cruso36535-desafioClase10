<!DOCTYPE html>
<html>
<%- include('../partials/head.ejs') %>

    <body>
        <div class="container my-4">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <h1 class="text-center h2">Listado de productos EJS</h1>

                    <table class="table table-light table-hover">
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Imagen</th>
                        </tr>
                        <% for (let producto of array) { %>
                            <tr>
                                <td>
                                    <%= producto.title %>
                                </td>
                                <td>
                                    <%= producto.price %>
                                </td>
                                <td><img src="<%= producto.thumbnail %>"
                                        style="max-height: 30px; vertical-align:middle;"></td>
                            </tr>
                            <% } %>
                    </table>


                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                <a href="/" class="btn btn-secondary" style="float: right;">Agregar nuevo producto</a>
            </div>
        </div>

    </body>

</html>